<h1>Список вкладок</h1>
<br></br>

<div class="row">
  <div class="col-md-6">
    <% @tags.each do |tag| %>
      <div class="card card-body bg-light task">
        <div class="row">
          <div class="col-md-8">
            <%= link_to "#{tag.name} (#{tag.tasks.count})", tag %>
          </div>
          <div class="col-md-2">
            <%= link_to edit_tag_path(tag), id: "edit_tag_#{tag.id}" do %>
                  <i class="fa fa-pencil i-task" aria-hidden="true"></i>
            <% end %>
          </div>
          <div class="col-md-2">
            <%= link_to tag_path(tag), method: :delete, data: { confirm: "Ви впевнені?" },
                  id: "delete_tag_#{tag.id}" do %>
                  <i class="fa fa-trash i-task" aria-hidden="true"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
